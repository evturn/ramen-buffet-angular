<!doctype html>
<html ng-app="ramenBuffet">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>RAMEN BUFFET</title>
	<link rel="stylesheet" type="text/css" href="../css/bootstrap.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="../css/style.css">
	<script type="text/javascript" src="../js/lib/jquery.js"></script>
	<script type="text/javascript" src="../js/lib/angular.js"></script>
	<script type="text/javascript" src="../js/controllers/main.js"></script>
	<script type="text/javascript" src="../js/services/todos.js"></script>
	<script type="text/javascript" src="../js/core.js"></script>
</head>
<body ng-controller="mainController">
	
		<section id="todoapp">
			<header id="header">
				<div class="text-center">	
	      	<h5><span class="fa fa-lock"></span> Login or Register with:</h5>
	      	<a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a>
		      <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
					<a href="/login" class="btn btn-default"><span class="fa fa-user"></span> Login</a>
		      <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span> Signup</a>
	    	</div>
			</header>
			<div class="jumbotron text-center">
				<h1>RAMEN BUFFET <span class="label label-info" id="todo-count">{{ todos.length }}</span></h1>
				<div id="todo-form">
					<form>
						<input type="text" class="form-control input-lg text-center" id="new-todo" placeholder="Write whatever. I don't care." ng-model="formData.text" autofocus>
						<button type="submit" class="btn btn-primary btn-lg" id="submit-btn" ng-click="createTodo()">Add</button>
					</form>
				</div>
			</div>
		<section id="main">
			<ul id="todo-list" class="row">
				<li class="view" ng-repeat="todo in todos">
					<input class="toggle" type="checkbox" {{ todo.done ? 'checked' : '' }}>
					<label>&#149; {{ todo.text }}</label>
					<button class="destroy" ng-click="deleteTodo(todo._id)"></button>
				</li>
			</ul>	
		</section>
		<footer id="footer"></footer>
		</section>
		<div id="info">
    	<p>Built by <a href="https://github.com/evturn">Evan Turner</a></p>
    	<p><a href="http://evturn.com">evturn.com</a></p>
  	</div>
	
</body>
</html>